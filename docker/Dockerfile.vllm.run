# Build (Go Profiler)
FROM golang:1.25 AS builder
WORKDIR /app
COPY ../src/main.go .
RUN go mod init InferenceProfiler && go mod tidy
RUN CGO_ENABLED=1 GOOS=linux go build -o profiler main.go

# Stage 1: Runtime Setup
FROM ubuntu:24.04
ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    python3-dev \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install vLLM system-wide
# --break-system-packages is required for Ubuntu 24.04 system-wide pip
RUN pip install --no-cache-dir --break-system-packages vllm torch-c-dlpack-ext

RUN mkdir -p /profiler-output

# Copy the Go binary
COPY --from=builder /app/profiler /usr/local/bin/profiler

ENTRYPOINT ["/usr/local/bin/profiler", "-o", "/profiler-output", "-t", "5000", "-f", "tsv"]

# Workload: Using system 'python3' directly
CMD ["python3", "-c", \
     "from vllm import LLM, SamplingParams; \
      llm = LLM(model='/app/model/', \
                gpu_memory_utilization=0.8, \
                max_model_len=2048, \
                dtype='bfloat16'); \
      sampling_params = SamplingParams(max_tokens=512); \
      print(llm.generate('Explain the difference between TCP and UDP.', sampling_params)[0].outputs[0].text)"]